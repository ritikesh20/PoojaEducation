<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp10"
    android:background="@drawable/edit_text_bg"
    android:padding="@dimen/sp12">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCollegeLogo"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_india" />

    <TextView
        android:id="@+id/tvCollegeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_toEndOf="@+id/ivCollegeLogo"
        android:fontFamily="@font/inter_bold"
        android:maxLines="1"
        android:text="Amity University"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCollegeName"
        android:layout_marginStart="@dimen/dp10"
        android:layout_toEndOf="@+id/ivCollegeLogo"
        android:fontFamily="@font/inter_regular"
        android:text="Patna, Bihar"
        android:textColor="@color/black_4C4C4C"
        android:textSize="@dimen/sp14" />

    <ImageView
        android:id="@+id/ivCollegeRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:layout_marginEnd="@dimen/dp4"
        android:layout_toStartOf="@+id/tvCollegeRating"
        android:src="@drawable/ic_rating" />

    <TextView
        android:id="@+id/tvCollegeRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/inter_semibold"
        android:text="4.5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp12" />


    <LinearLayout
        android:id="@+id/llCollegeMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivCollegeLogo"
        android:layout_marginTop="@dimen/dp8"
        android:gravity="center|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCollegeMode"
            android:layout_width="@dimen/dp14"
            android:layout_height="@dimen/dp14"
            android:src="@drawable/ic_online" />

        <TextView
            android:id="@+id/tvCollegeModeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp6"
            android:fontFamily="@font/inter_medium"
            android:text="Online"
            android:textColor="@color/black_4C4C4C"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llCollegeMode"
        android:layout_marginTop="@dimen/dp8"
        android:gravity="center|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCollegeDate"
            android:layout_width="@dimen/dp14"
            android:layout_height="@dimen/dp14"
            android:src="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/tvCollegeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp6"
            android:fontFamily="@font/inter_medium"
            android:text="7 July - 08 Sept, 2025"
            android:textColor="@color/black_4C4C4C"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCollegeFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llDate"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp12"
        android:gravity="center|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCollegeFeeRange"
            android:layout_width="@dimen/dp14"
            android:layout_height="@dimen/dp14"
            android:src="@drawable/ic_indianrupee" />

        <TextView
            android:id="@+id/tvCollegeFeeRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp6"
            android:fontFamily="@font/inter_medium"
            android:text="Fees range 1 lac - 5 lac"
            android:textColor="@color/black_4C4C4C"
            android:textSize="@dimen/sp12" />

    </LinearLayout>


</RelativeLayout>